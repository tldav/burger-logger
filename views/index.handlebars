<div class="container">


    <h1>Eat da Burger</h1>

    <h3>Menu</h3>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>{{burger_name}}</li>
        {{/unless}}
        {{/each}}
    </ul>


    <h3>Unavailable</h3>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>{{burger_name}}</li>
        {{/if}}
        {{/each}}
    </ul>

    <h3>Create a Custom Burger</h3>

    <form class="create-form">

        <div class="form-group">
            <label for="bn">Burger Name:</label>
            <input type="text" id="bn" name="name">
        </div>

        <button type="submit">Create Burger</button>
    </form>

</div>